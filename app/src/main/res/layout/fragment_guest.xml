<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onpus.weddingpanda.fragment.GuestFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/guestImage"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/guest2" />
        <TextView
            android:gravity="left"
            android:textColor="@color/wordcolorA"
            android:id="@+id/acceptNo"
            android:textSize="23dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="97dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <TextView
            android:id="@+id/inviteNo"
            android:textColor="@color/wordcolorA"
            android:textSize="23dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/acceptNo"
            android:text="7" />

        <ListView
            android:layout_below="@+id/guestImage"
            android:id="@+id/guestlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_margin="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/addInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    </LinearLayout>

</FrameLayout>
