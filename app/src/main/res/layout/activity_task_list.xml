<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context="com.example.onpus.weddingpanda.TaskListActivity">


        <TableLayout
            android:id="@+id/tableTasklist"
            android:gravity="right|center_vertical"
            android:stretchColumns="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:gravity="center_horizontal">

                <android.support.design.widget.TextInputEditText
                    android:textColorHint="@color/colorbutton"
                    android:id="@+id/gettask"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:padding="20dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="Your task Here">


                </android.support.design.widget.TextInputEditText>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1mm"
                android:alpha="0.3"
                android:background="#000000" >
            </View>
            <TableRow
                android:gravity="center_vertical"
                android:padding="10dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                >
                <DatePicker
                    android:id="@+id/simpleDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1mm"
                android:alpha="0.3"
                android:background="#000000" >
            </View>

        </TableLayout>

        <Button
            android:layout_marginTop="15dp"
            android:text="submit"
            android:layout_below="@+id/tableTasklist"
            android:id="@+id/submitTask"
            android:textColor="@color/wordcolorB"
            android:background="@color/colorbutton"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
</RelativeLayout>
